<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_main_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_green"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_text_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5_px"
                android:fontStyleName="@{`Roboto_Regular.ttf`}"
                android:padding="@dimen/_5_px"
                android:text="Option One"
                android:textColor="@color/greencolor"
                android:textSize="@dimen/_13_px"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_text_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5_px"
                android:fontStyleName="@{`Roboto_Bold.ttf`}"
                android:padding="@dimen/_5_px"
                android:text="EDIT OPTION"
                android:textColor="@color/green_button"
                android:textSize="@dimen/_13_px"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:id="@+id/ll_sub_option"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_main_option" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15_px"
            android:layout_marginRight="@dimen/_10_px"
            android:fontStyleName="@{`Roboto_Regular.ttf`}"
            android:text="Selection"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/_10_px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_sub_option" />

        <TextView
            android:id="@+id/tv_text_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15_px"
            android:fontStyleName="@{`Roboto_Regular.ttf`}"
            android:text="Min"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/_10_px"
            app:layout_constraintBottom_toBottomOf="@+id/tv_add_sub_option"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_add_sub_option" />

        <TextView
            android:id="@+id/tv_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10_px"
            android:fontStyleName="@{`Roboto_Regular.ttf`}"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="@dimen/_10_px"
            app:layout_constraintBottom_toBottomOf="@+id/tv_add_sub_option"
            app:layout_constraintLeft_toRightOf="@+id/tv_text_min"
            app:layout_constraintTop_toTopOf="@+id/tv_add_sub_option" />


        <TextView
            android:id="@+id/tv_text_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15_px"
            android:fontStyleName="@{`Roboto_Regular.ttf`}"
            android:text="Max"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/_10_px"
            app:layout_constraintBottom_toBottomOf="@+id/tv_add_sub_option"
            app:layout_constraintLeft_toRightOf="@+id/tv_min"
            app:layout_constraintTop_toTopOf="@+id/tv_add_sub_option" />

        <TextView
            android:id="@+id/tv_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10_px"
            android:fontStyleName="@{`Roboto_Regular.ttf`}"
            android:text="10"
            android:textColor="@color/black"
            android:textSize="@dimen/_10_px"
            app:layout_constraintBottom_toBottomOf="@+id/tv_add_sub_option"
            app:layout_constraintLeft_toRightOf="@+id/tv_text_max"
            app:layout_constraintTop_toTopOf="@+id/tv_add_sub_option" />

        <TextView
            android:id="@+id/tv_add_sub_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_5_px"
            android:fontStyleName="@{`Roboto_Bold.ttf`}"
            android:padding="@dimen/_5_px"
            android:text="+SUB-OPTION"
            android:textColor="@color/green_button"
            android:textSize="@dimen/_13_px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_text" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>