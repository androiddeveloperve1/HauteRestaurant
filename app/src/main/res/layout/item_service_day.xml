<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="myModel"
            type="com.app.mylibertarestaurant.model.TimeModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10_px">


        <ImageView
            android:id="@+id/img_checkbox"
            android:layout_width="@dimen/_30_px"
            android:layout_height="@dimen/_30_px"
            android:padding="@dimen/_5_px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_service_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20_px"
            android:fontStyleName="@{`Roboto_Regular.ttf`}"
            android:text="Monday"
            android:textColor="@color/black"
            android:textSize="@dimen/_15_px"
            app:layout_constraintBottom_toBottomOf="@+id/img_checkbox"
            app:layout_constraintLeft_toRightOf="@+id/img_checkbox"
            app:layout_constraintTop_toTopOf="@+id/img_checkbox" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_slot1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10_px"
            app:layout_constraintLeft_toLeftOf="@+id/tv_service_day"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_service_day">

            <TextView
                android:id="@+id/tv_open_text1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontStyleName="@{`Roboto_Regular.ttf`}"
                android:text="Start Time"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/_12_px"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_open_time1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10_px"
                android:fontStyleName="@{`Roboto_Regular.ttf`}"
                android:textColor="@color/black"
                android:textSize="@dimen/_13_px"
                app:layout_constraintBottom_toBottomOf="@id/tv_open_text1"
                app:layout_constraintLeft_toRightOf="@+id/tv_open_text1"
                app:layout_constraintTop_toTopOf="@id/tv_open_text1" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/_1_px"
                android:background="@color/black"
                app:layout_constraintLeft_toLeftOf="@+id/tv_open_time1"
                app:layout_constraintRight_toRightOf="@+id/tv_open_time1"
                app:layout_constraintTop_toBottomOf="@+id/tv_open_time1" />


            <TextView
                android:id="@+id/tv_close_text1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20_px"
                android:fontStyleName="@{`Roboto_Regular.ttf`}"
                android:text="End Time"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/_12_px"
                app:layout_constraintBottom_toBottomOf="@id/tv_open_text1"
                app:layout_constraintLeft_toRightOf="@+id/tv_open_time1"
                app:layout_constraintTop_toTopOf="@id/tv_open_text1" />

            <TextView
                android:id="@+id/tv_close_time1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10_px"
                android:fontStyleName="@{`Roboto_Regular.ttf`}"
                android:textColor="@color/black"
                android:textSize="@dimen/_13_px"
                app:layout_constraintBottom_toBottomOf="@id/tv_open_text1"
                app:layout_constraintLeft_toRightOf="@+id/tv_close_text1"
                app:layout_constraintTop_toTopOf="@id/tv_open_text1" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/_1_px"
                android:background="@color/black"
                app:layout_constraintLeft_toLeftOf="@+id/tv_close_time1"
                app:layout_constraintRight_toRightOf="@+id/tv_close_time1"
                app:layout_constraintTop_toBottomOf="@+id/tv_close_time1" />

            <ImageView
                android:id="@+id/img_add_new_slot"
                android:layout_width="@dimen/_20_px"
                android:layout_height="@dimen/_20_px"
                android:layout_marginLeft="@dimen/_10_px"
                android:visibility="gone"
                android:src="@drawable/ic_add_time"
                app:layout_constraintBottom_toBottomOf="@+id/tv_close_time1"
                app:layout_constraintLeft_toRightOf="@+id/tv_close_time1"
                app:layout_constraintTop_toTopOf="@+id/tv_close_time1" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_slot2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10_px"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/tv_service_day"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_slot1">

            <TextView
                android:id="@+id/tv_open_text2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontStyleName="@{`Roboto_Regular.ttf`}"
                android:text="Start Time"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/_12_px"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_open_time2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10_px"
                android:fontStyleName="@{`Roboto_Regular.ttf`}"
                android:textColor="@color/black"
                android:textSize="@dimen/_13_px"

                app:layout_constraintBottom_toBottomOf="@id/tv_open_text2"
                app:layout_constraintLeft_toRightOf="@+id/tv_open_text2"
                app:layout_constraintTop_toTopOf="@id/tv_open_text2" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/_1_px"
                android:background="@color/black"
                app:layout_constraintLeft_toLeftOf="@+id/tv_open_time2"
                app:layout_constraintRight_toRightOf="@+id/tv_open_time2"
                app:layout_constraintTop_toBottomOf="@+id/tv_open_time2" />

            <TextView
                android:id="@+id/tv_close_text2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20_px"
                android:fontStyleName="@{`Roboto_Regular.ttf`}"
                android:text="End Time"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/_12_px"
                app:layout_constraintBottom_toBottomOf="@id/tv_open_text2"
                app:layout_constraintLeft_toRightOf="@+id/tv_open_time2"
                app:layout_constraintTop_toTopOf="@id/tv_open_text2" />

            <TextView
                android:id="@+id/tv_close_time2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10_px"
                android:fontStyleName="@{`Roboto_Regular.ttf`}"
                android:textColor="@color/black"
                android:textSize="@dimen/_13_px"

                app:layout_constraintBottom_toBottomOf="@id/tv_open_text2"
                app:layout_constraintLeft_toRightOf="@+id/tv_close_text2"
                app:layout_constraintTop_toTopOf="@id/tv_open_text2" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/_1_px"
                android:background="@color/black"
                app:layout_constraintLeft_toLeftOf="@+id/tv_close_time2"
                app:layout_constraintRight_toRightOf="@+id/tv_close_time2"
                app:layout_constraintTop_toBottomOf="@+id/tv_close_time2" />

            <ImageView
                android:id="@+id/img_remove_new_slot"
                android:layout_width="@dimen/_20_px"
                android:layout_height="@dimen/_20_px"
                android:layout_marginLeft="@dimen/_10_px"
                android:padding="@dimen/_5_px"
                android:src="@drawable/cancel_black"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/tv_close_time2"
                app:layout_constraintLeft_toRightOf="@+id/tv_close_time2"
                app:layout_constraintTop_toTopOf="@+id/tv_close_time2" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/_1_px"
            android:layout_marginTop="@dimen/_10_px"
            android:background="@color/gray"
            app:layout_constraintLeft_toLeftOf="@+id/tv_service_day"
            app:layout_constraintTop_toBottomOf="@+id/ll_slot2" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>