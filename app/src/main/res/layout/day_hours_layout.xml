<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="horizontal">

        <RelativeLayout

            android:id="@+id/rl_mon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_mon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/_10_px"
                android:fontStyleName="@{`Roboto_Bold.ttf`}"
                android:text='MON'
                android:textColor="@color/greencolor"
                android:textSize="@dimen/_12_px" />

            <View
                android:id="@+id/line_mon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2_px"
                android:layout_below="@+id/tv_mon"
                android:background="@color/greencolor" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_tue"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_tue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/_10_px"
                android:fontStyleName="@{`Roboto_Bold.ttf`}"
                android:text='TUE'
                android:textColor="@color/greencolor"
                android:textSize="@dimen/_12_px" />

            <View
                android:id="@+id/line_tue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2_px"
                android:layout_below="@+id/tv_tue"
                android:background="@color/greencolor"
                android:visibility="gone" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_wed"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_wed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/_10_px"
                android:fontStyleName="@{`Roboto_Bold.ttf`}"
                android:text='WED'
                android:textColor="@color/greencolor"
                android:textSize="@dimen/_12_px" />

            <View
                android:id="@+id/line_wed"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2_px"
                android:layout_below="@+id/tv_wed"
                android:background="@color/greencolor"
                android:visibility="gone" />


        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/rl_thru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_thru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/_10_px"
                android:fontStyleName="@{`Roboto_Bold.ttf`}"
                android:text='THU'
                android:textColor="@color/greencolor"
                android:textSize="@dimen/_12_px" />

            <View
                android:id="@+id/line_thu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2_px"
                android:layout_below="@+id/tv_thru"
                android:background="@color/greencolor"
                android:visibility="gone" />


        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/rl_fri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_fri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/_10_px"
                android:fontStyleName="@{`Roboto_Bold.ttf`}"
                android:text='FRI'
                android:textColor="@color/greencolor"
                android:textSize="@dimen/_12_px" />

            <View
                android:id="@+id/line_fri"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2_px"
                android:layout_below="@+id/tv_fri"
                android:background="@color/greencolor"
                android:visibility="gone" />


        </RelativeLayout>


        <RelativeLayout

            android:id="@+id/rl_sat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_sat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/_10_px"
                android:fontStyleName="@{`Roboto_Bold.ttf`}"
                android:text='SAT'
                android:textColor="@color/greencolor"
                android:textSize="@dimen/_12_px" />

            <View
                android:id="@+id/line_sat"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2_px"
                android:layout_below="@+id/tv_sat"
                android:background="@color/greencolor"
                android:visibility="gone" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_sun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_sun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/_10_px"
                android:fontStyleName="@{`Roboto_Bold.ttf`}"
                android:text='SUN'
                android:textColor="@color/greencolor"

                android:textSize="@dimen/_12_px" />

            <View
                android:id="@+id/line_sun"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2_px"
                android:layout_below="@+id/tv_sun"
                android:background="@color/greencolor"
                android:visibility="gone" />


        </RelativeLayout>


    </LinearLayout>
</layout>