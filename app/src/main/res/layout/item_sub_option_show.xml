<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="myModel"
            type="com.app.mylibertarestaurant.model.newP.SubOptionModel" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_2_px">

        <ImageView
            android:id="@+id/iv_bullet"
            android:layout_width="@dimen/_7_px"
            android:layout_height="@dimen/_7_px"
            android:background="@drawable/circle_black"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_name" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8_px"
            android:fontStyleName="@{`Roboto_Regular.ttf`}"
            android:text="@{myModel.name}"
            android:textColor="@color/black"
            android:textSize="@dimen/_11_px"
            app:layout_constraintLeft_toRightOf="@+id/iv_bullet"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>