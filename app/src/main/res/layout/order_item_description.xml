<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.app.mylibertarestaurant.model.items.OrderItemModel" />
        <variable
            name="adapter"
            type="com.app.mylibertarestaurant.adapter.ShowAttributeAdapter" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5_px"
                android:layout_weight=".5"
                android:fontStyleName="@{`Roboto_Regular.ttf`}"
                android:text='@{model.item_id.name}'
                android:textColor="@color/black"
                android:textSize="@dimen/_13_px" />

            <TextView
                android:id="@+id/tv_item_qty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5_px"
                android:layout_weight=".2"
                android:fontStyleName="@{`Roboto_Regular.ttf`}"
                android:gravity="center"
                android:text='@{model.quantity}'
                android:textColor="@color/black"
                android:textSize="@dimen/_13_px" />

            <TextView
                android:id="@+id/tv_item_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5_px"
                android:layout_weight=".3"
                android:fontStyleName="@{`Roboto_Regular.ttf`}"
                android:gravity="right"
                android:text='@{"$ "+model.price}'
                android:textColor="@color/black"
                android:textSize="@dimen/_13_px" />


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_atribute"
            android:layout_marginLeft="@dimen/_20_px"
            android:layout_width="match_parent"
            android:adapter="@{adapter}"
            android:layout_height="wrap_content" />

    </LinearLayout>
</layout>