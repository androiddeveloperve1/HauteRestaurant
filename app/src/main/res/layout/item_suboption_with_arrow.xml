<?xml version="1.0" encoding="utf-8"?>
<layout>


    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_2_px">

        <ImageView
            android:id="@+id/iv_bullet"
            android:layout_width="@dimen/_4_px"
            android:layout_height="@dimen/_4_px"
            android:layout_marginLeft="@dimen/_10_px"
            android:background="@drawable/circle_black"
            app:layout_constraintBottom_toBottomOf="@+id/iv_next"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_next" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8_px"
            android:layout_marginRight="@dimen/_8_px"
            android:textColor="@color/black"
            android:textSize="@dimen/_11_px"
            app:layout_constraintBottom_toBottomOf="@+id/iv_next"
            app:layout_constraintLeft_toRightOf="@+id/iv_bullet"
            app:layout_constraintRight_toLeftOf="@+id/iv_next"
            app:layout_constraintTop_toTopOf="@id/iv_next" />

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="@dimen/_25_px"
            android:layout_height="@dimen/_25_px"
            android:layout_marginLeft="@dimen/_10_px"
            android:layout_marginRight="@dimen/_10_px"
            android:background="@drawable/ic_right_arrow_grey"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/devider"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/_5_px"
            android:background="@color/gray_text"
            app:layout_constraintLeft_toLeftOf="@+id/tv_name"
            app:layout_constraintTop_toBottomOf="@+id/iv_next"
            android:layout_height="1px"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>